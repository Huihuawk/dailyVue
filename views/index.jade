extends layout

block append head
  link(rel='stylesheet', href='/css/index/index.css')

block content
  div.start-img
    div.back-img(style="background-image: url(#{pic.img})" data-img="#{pic.img}")
    p.author #{pic.text}

  div.articles(data-articles="#{latest.length}")
    if latest.length > 0
      each item in latest
        a.article(href="http://daily.zhihu.com/story/#{item.id}")
          span #{item.title}
          if(item && item.images)
            img(data-src="#{item.images[0]}").J_Lazyload
      div.calendar

block append footer
  script(src="/js/index.js")