extends layout

block append head
  link(rel='stylesheet', href='/css/index/index.css')

block content

  div.articles(data-articles="#{latest.length}")
    if latest.length > 0
      each item in latest
        p.article
          a(href="http://daily.zhihu.com/story/#{item.id}") #{item.title}
          if(item && item.images)
            img(data-src="#{item.images[0]}")

block append footer
  script(src="/js/index.js")