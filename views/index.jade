extends layout

block append head
  link(rel='stylesheet', href='/css/index/index.css')

block content
  div.start-img(style="display:none")
    div.back-img(style="background-image:url(#{pic.img})" data-img="#{pic.img}")
    p.author #{pic.text}
  div.articles(data-articles="#{latest.length}")
    if latest.length > 0
      each item in latest
        p.article
          a(href="http://daily.zhihu.com/story/#{item.id}") #{item.title}
          img(data-src="#{item.images[0]}")

block append footer
  script(src="/js/index.js")