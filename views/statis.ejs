<script>
    const backToTop = function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) {
                $('#back-to-top').fadeIn();
            } else {
                $('#back-to-top').fadeOut();
            }
        });
    }
    $('#back-to-top').click(function (e) {
        e.preventDefault();
        $('html, body').animate({scrollTop: 0}, 1000);
        return false;
    });
    $("#submit").click(function(){
        const syear = $('#syear').val();
        const smonth = $('#smonth').val();
        const dmonth = syear + smonth;
        if (parseInt(syear + smonth) >= 201305){
            window.location.href = "/statistics/month/" + dmonth;
        } else {
            alert("最早的数据统计在2013年5月，请选择正确的月份。")
        }
    });
    $(document).ready(backToTop());
</script>
